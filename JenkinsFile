@Library('pipelib@master') _


node {
// ('sl61')
  def nodejs = tool 'NodeJS_6'

  stage('Setup') {
    git([
      url: env.GIT_URL ? env.GIT_URL : 'https://github.com/venicegeo/dg-pz-sak',
      branch: "master"
    ])
  }

  stage('Karma Tests') {
    npmSetup()
    withEnv(["PATH+=${nodejs}/bin"]) {
      sh './ci/karma.sh'
    }
  }

  stage('Archive') {
    sh './ci/archive.sh'
    mavenPush()
  }


  stage ('CI Deploy') {
    cfPush()
    cfBgDeploy()
  }

  stage ('Integration Testing') {
    postman()
  }

  stage('Reset') {
    git([
      url: env.GIT_URL ? env.GIT_URL : 'https://github.com/venicegeo/dg-pz-sak',
      branch: "master"
    ])
  }

  stage('Staging Deploy') {
    cfPush {
      cfTarget = 'stage'
    }
    cfBgDeploy {
      cfTarget = 'stage'
    }
  }


  stage ('Cleanup') {
    deleteDir()
  }
}
